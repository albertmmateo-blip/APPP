<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design 3 -->
    <style name="Base.Theme.ApppAvisos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Teal for app bar -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        
        <!-- Secondary brand color - Deep Orange accent -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        
        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar color (darker shade of primary for better contrast) -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        
        <!-- Navigation bar color (for Android 8.0 and above) -->
        <item name="android:navigationBarColor" tools:targetApi="o">@color/surface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.ApppAvisos.Toolbar</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.ApppAvisos" parent="Base.Theme.ApppAvisos" />
    
    <!-- Toolbar styling for use with NoActionBar theme -->
    <style name="Widget.ApppAvisos.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="elevation">4dp</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
    </style>
</resources>
