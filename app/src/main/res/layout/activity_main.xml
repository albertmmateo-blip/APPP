<?xml version="1.0" encoding="utf-8"?>
<!-- Main Activity Layout with Material Design 3 components
     Features:
     - AppBar with app title
     - TabLayout with 4 category tabs (icons + labels)
     - RecyclerView for displaying notes list
     - FloatingActionButton for adding new notes
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AppBar Layout - Contains Toolbar for app title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <!-- Toolbar with app title "Entretelas" -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_title"
            app:titleTextColor="@color/text_on_primary" />

        <!-- TabLayout with 4 tabs for categories
             Each tab includes both icon and text label
             Scrollable for smaller screens -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorHeight="3dp"
            app:tabInlineLabel="false"
            app:tabSelectedTextColor="@color/secondary"
            app:tabTextColor="@color/text_on_primary"
            app:tabIndicatorColor="@color/secondary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content container with RecyclerView
         Uses app:layout_behavior to work with CoordinatorLayout scrolling -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- RecyclerView for displaying list of notes
             Fills available space below TabLayout
             Supports dynamic content and smooth scrolling -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/recycler_view_fab_padding"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_note" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FloatingActionButton for adding new notes
         Positioned at bottom-right corner
         Displays "+" icon with appropriate content description for accessibility -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/fab_add_note"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/secondary"
        app:tint="@color/text_on_secondary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
