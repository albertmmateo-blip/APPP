<?xml version="1.0" encoding="utf-8"?>
<!-- Note Detail Activity Layout with Material Design 3 components
     Features:
     - Read-only display of note details
     - Buttons for Edit and Back actions
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NoteDetailActivity">

    <!-- Main vertical layout container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Note Name Section -->
        <TextView
            android:id="@+id/labelNoteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_note_name"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNoteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            tools:text="Sample Note Name" />

        <!-- Note Body Section -->
        <TextView
            android:id="@+id/labelNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_note_body"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="Sample note body with some content that can span multiple lines." />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/labelContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_contact"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="John Doe" />

        <!-- Category Section -->
        <TextView
            android:id="@+id/labelCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_category"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="Trucar" />

        <!-- Created Date Section -->
        <TextView
            android:id="@+id/labelCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_created_date"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            tools:text="01/01/2024 12:00" />

        <!-- Modified Date Section -->
        <TextView
            android:id="@+id/labelModifiedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_modified_date"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textModifiedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            tools:text="01/01/2024 12:30" />

        <!-- Edit History Section (collapsed by default) -->
        <LinearLayout
            android:id="@+id/layoutEditHistorySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <!-- Collapsible header button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonToggleEditHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_view_edit_history"
                android:textAlignment="textStart"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="end"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- Edit History RecyclerView (hidden by default) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEditHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_edit_history"
                tools:itemCount="3" />

        </LinearLayout>

        <!-- Action buttons container (horizontal layout) -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Edit button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/button_edit"
                style="@style/Widget.Material3.Button" />

            <!-- Back button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/button_back"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
