<?xml version="1.0" encoding="utf-8"?>
<!-- Note Detail Activity Layout with Material Design 3 components
     Features:
     - Read-only display of note details
     - Buttons for Edit and Back actions
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NoteDetailActivity">

    <!-- Main vertical layout container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Note Name Section -->
        <TextView
            android:id="@+id/labelNoteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_note_name"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNoteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            tools:text="Sample Note Name" />

        <!-- Note Body Section -->
        <TextView
            android:id="@+id/labelNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_note_body"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="Sample note body with some content that can span multiple lines." />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/labelContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_contact"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="John Doe" />

        <!-- Category Section -->
        <TextView
            android:id="@+id/labelCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_category"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            tools:text="Trucar" />

        <!-- Author Section -->
        <LinearLayout
            android:id="@+id/layoutAuthorSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/labelAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/label_author"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Pedro" />

        </LinearLayout>

        <!-- Urgent Section -->
        <LinearLayout
            android:id="@+id/layoutUrgentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/labelUrgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/label_urgent"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textUrgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/error"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/badge_urgent"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:contentDescription="@string/accessibility_urgent_note" />

        </LinearLayout>

        <!-- Created Date Section -->
        <LinearLayout
            android:id="@+id/layoutCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/labelCreatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/label_created_date"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCreatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                tools:text="01/01/2024 12:00" />

        </LinearLayout>

        <!-- Modified Date Section -->
        <LinearLayout
            android:id="@+id/layoutModifiedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/labelModifiedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/label_modified_date"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textModifiedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                tools:text="01/01/2024 12:30" />

        </LinearLayout>

        <!-- Edit History Section (collapsed by default) -->
        <LinearLayout
            android:id="@+id/layoutEditHistorySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <!-- Collapsible header button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonToggleEditHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_view_edit_history"
                android:textAlignment="textStart"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="end"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- Edit History RecyclerView (hidden by default) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEditHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_edit_history"
                tools:itemCount="3" />

        </LinearLayout>

        <!-- Action buttons container (vertical layout for two rows) -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- First row: Edita and Enrere buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- Edit button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_edit"
                    android:contentDescription="@string/accessibility_button_edit"
                    style="@style/Widget.Material3.Button" />

                <!-- Back button (Enrere) - white with black outline -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/button_enrere"
                    android:contentDescription="@string/accessibility_button_back"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

            <!-- Second row: Finalitza and Esborra buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Finalitza button (green) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFinalitza"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_finalize"
                    android:contentDescription="@string/accessibility_button_finalitza"
                    android:backgroundTint="@color/button_green"
                    style="@style/Widget.Material3.Button" />

                <!-- Esborra button (red) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEsborra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/button_esborra"
                    android:contentDescription="@string/accessibility_button_esborra"
                    android:backgroundTint="@color/button_red"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
