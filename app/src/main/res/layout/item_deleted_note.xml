<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for deleted notes in Recycle Bin
     Features:
     - Note name and body preview
     - Deletion date
     - Category badge
     - Restore and Delete buttons
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Note name and category badge row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <!-- Note name (takes up remaining space) -->
            <TextView
                android:id="@+id/textNoteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Category badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                style="@style/Widget.Material3.Chip.Assist.Elevated" />

        </LinearLayout>

        <!-- Note body preview -->
        <TextView
            android:id="@+id/textNoteBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Deletion date -->
        <TextView
            android:id="@+id/textDeletedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

        <!-- Action buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Restore button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/button_restore"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- Permanent delete button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeletePermanently"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_delete_permanently"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
